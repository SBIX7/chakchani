<Window x:Class="SNRT.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SNRT" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#f0f0f0" Margin="8">
            <TextBlock Text="SNRT Employee App" FontWeight="Bold" FontSize="16"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="8,0,0,0">
                <Button x:Name="AdminBtn" Content="Admin Dashboard" Margin="0,0,8,0" Click="OnAdminClick" Visibility="Collapsed"/>
                <Button Content="Logout" Click="OnLogoutClick"/>
            </StackPanel>
        </StackPanel>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Source="Assets/logo.png" Height="100" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <ListView x:Name="CombinedList" Grid.Row="1" AllowDrop="True">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Source" Width="120" DisplayMemberBinding="{Binding Source}"/>
                        <GridViewColumn Header="Title" Width="500" DisplayMemberBinding="{Binding Title}"/>
                        <GridViewColumn Header="Published" Width="140" DisplayMemberBinding="{Binding Published}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </DockPanel>
</Window>

<Window x:Class="SNRT.Desktop.Views.AdminDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard - Login Activity" Height="520" Width="800" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8" VerticalAlignment="Center">
            <TextBlock Text="User:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="UserFilter" Width="200" DisplayMemberPath="Email" SelectedValuePath="Id"/>
            <TextBlock Text="From:" VerticalAlignment="Center" Margin="12,0,6,0"/>
            <DatePicker x:Name="FromDate" Width="140"/>
            <TextBlock Text="To:" VerticalAlignment="Center" Margin="12,0,6,0"/>
            <DatePicker x:Name="ToDate" Width="140"/>
            <Button Content="Apply" Margin="12,0,0,0" Width="80" Click="OnApplyFilters"/>
            <Button Content="Export CSV" Margin="8,0,0,0" Width="100" Click="OnExportCsv"/>
        </StackPanel>
        <DataGrid x:Name="LogsGrid" Margin="8" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="User" Binding="{Binding UserEmail}" Width="*"/>
                <DataGridTextColumn Header="Timestamp (UTC)" Binding="{Binding Timestamp}" Width="200"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Note" Binding="{Binding Note}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window> 
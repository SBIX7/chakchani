<Window x:Class="SNRT.Desktop.Views.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SNRT - Sign up" Height="460" Width="420" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Sign up" FontSize="20" FontWeight="Bold"/>
        <StackPanel Grid.Row="1" Margin="0,12,0,0">
            <TextBlock Text="First name"/>
            <TextBox x:Name="FirstNameBox" Height="28"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="0,8,0,0">
            <TextBlock Text="Last name"/>
            <TextBox x:Name="LastNameBox" Height="28"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Margin="0,8,0,0">
            <TextBlock Text="Email"/>
            <TextBox x:Name="EmailBox" Height="28"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Margin="0,8,0,0">
            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordBox" Height="28"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Margin="0,8,0,0">
            <TextBlock Text="Confirm password"/>
            <PasswordBox x:Name="ConfirmBox" Height="28"/>
        </StackPanel>
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Create" Width="90" Margin="0,0,8,0" Click="OnCreateClick"/>
            <Button Content="Back" Width="90" Click="OnBackClick"/>
        </StackPanel>
        <TextBlock x:Name="ErrorText" Grid.Row="6" Foreground="Red" VerticalAlignment="Bottom"/>
    </Grid>
</Window> 